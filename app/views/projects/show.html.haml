%h1
  ="Project: #{@project.name}"
=@project.description
%br
%h3
  Tasks
=link_to "Create a new project task", new_project_task_path(@project)

%table.data
  %thead
    %tr
      %th
        ID
      %th
        Name
  %tbody
    -@project.tasks.each do |t|
      %tr
        %td
          =t.id
        %td
          =t.name